{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es2020",
        "module": "CommonJS",
        "lib": [
            "esnext",
            "dom"
        ],
        "outDir": "features",
        "strict": true,
        "esModuleInterop": true,
    },
    "include": [
        "features/step_definitions-ts/**/*",
        "features/support-ts/**/*",
        "features/*.feature"
    ],
    "exclude": [
        "node_modules"
    ]
}